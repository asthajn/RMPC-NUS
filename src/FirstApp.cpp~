#include "/usr/include/cairo/cairo.h"
#include <stdlib.h>
#include <functional>
#include <random>
#include <iostream>
#include <fontconfig/fontconfig.h>
#include <zlib.h>
#include <vector>
//#include "gtk-2.0/gtk/gtk.h"

using namespace std;

typedef struct _cairo cairo_t;
/*typedef struct {
    cairo_status_t status;
    cairo_path_data_t *data;
    int num_data;
} cairo_path_t;
*/

int i;
     cairo_path_t *path;
     cairo_path_data_t *data;


int main(int argc, char *argv[])
{
	/*
	cairo_t* cr;
	cairo_t* cairo_create(cairo_surface_t *target);
	cairo_t* cairo_reference(cairo_t *cr);
	  path = cairo_copy_path(cr);*/

	        int number = 5000, range_end=500;
	        ranlux48 generator;
	        uniform_int_distribution<int> distribution(0,range_end);
	        double y[number];
	        vector<double> dice_roll;
	        for(int i=0;i<number;i++)
	        {
	        dice_roll[i] = distribution(generator);
	        //auto dice = bind(distribution, generator);

	        y[i] = distribution(generator);
	        }
	for(int i=0;i<number;i++)
	{
	        cout<<"The point is : "<<dice_roll[i]<<"        "<<y[i]<<"\n";
	}

	//cout << "!!!Hello World!!!" << endl; // prints !!!Hello World!!!

	  cairo_surface_t *surface;
	  cairo_t *cr;

	  //double points[5][2]={{50,50},{60,40},{70,70},{20,30},{80,90}};

	  surface = cairo_image_surface_create(CAIRO_FORMAT_ARGB32, range_end, range_end);
	  cr = cairo_create(surface);



	  cairo_set_source_rgb(cr, 0, 0, 0);
	  cairo_move_to(cr, 10.0, 50.0);
	  cairo_select_font_face(cr, "Sans", CAIRO_FONT_SLANT_NORMAL,
	      CAIRO_FONT_WEIGHT_NORMAL);
	  cairo_set_font_size(cr, 40.0);
	  cairo_show_text(cr, " points displayed");
	  cairo_set_line_width (cr, 2.0);
	  //cairo_show_text(cr, number + " points displayed");
	 // cairo_move_to(cr, 10.0, 50.0);
	  for(int j=0;j<10;j++)
	  {
		cairo_arc(cr, dice_roll[j],y[j], 0.2, 0., 2 * 3.14);
		//cairo_line_to(cr , dice_roll[j],y[j]);
		cairo_stroke (cr);
		cairo_paint(cr);
		sleep(120);
		cout<<"The next point is " << dice_roll[j]<< "	"<<y[j] << "\n";
	  }
	  //cairo_show_text(cr, "Disziplin ist Macht.");
	  //cairo_stroke (cr);

	  //cairo_surface_write_to_png(surface, "image.png");
	  //cairo_save(cr);
	  cairo_surface_show_page(surface);

	  cairo_destroy(cr);
	  cairo_surface_destroy(surface);

	  return 0;
}

